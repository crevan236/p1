<!DOCTYPE html>
<html>
	<head>
		<title>{{main_title}}</title>
		<link rel="stylesheet" href="/assets/css/main.css">
		<link href="https://fonts.googleapis.com/css?family=Saira+Condensed" rel="stylesheet">
		<script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
	</head>
	<body>
		<div class="container">
			{{#with landing_page}}
				<section class="landing">
					<div class="center">
						<h1 class="super-text" >{{name}}</h1>
						<h3 class="super-text" >{{tagline}}</h3>
					</div>
					<div class="bottom vertical_pulsate">
						<p><i class="fas fa-chevron-down"></i></p>	
					</div>	
				</section>
			{{/with}}
			<section class="contact">
				<div class="section-title"><h1>{{contact_title}}</h1></div>
				{{#each contact}}
				<div class="social-box">
					<h3><i class="{{this.icon}}"></i></h3>
					<a href="{{this.link}}" ><h5>{{this.title}}</h5></a>
				</div>
				{{/each}}
			</section>

			{{>footer}}
		</div>
	</body>

</html>